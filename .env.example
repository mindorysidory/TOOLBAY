# TOOLBAY Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================
# SUPABASE CONFIGURATION
# =============================================
# Get these from your Supabase project dashboard -> Settings -> API
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# =============================================
# DATABASE CONFIGURATION
# =============================================
# Direct PostgreSQL connection (get from Supabase -> Settings -> Database)
DATABASE_URL=postgresql://postgres:your_password@db.your_project_ref.supabase.co:5432/postgres

# =============================================
# AUTHENTICATION & SECURITY
# =============================================
# Generate a strong random string for JWT signing
JWT_SECRET=your_super_secret_jwt_key_here_min_32_chars

# API rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================
# SERVER CONFIGURATION
# =============================================
PORT=3001
NODE_ENV=development

# CORS settings
CORS_ORIGIN=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================
# REDIS CONFIGURATION (Optional)
# =============================================
# For caching and session management
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# =============================================
# EXTERNAL SERVICES
# =============================================
# For metadata extraction when adding new tools
PUPPETEER_CACHE_DIR=./cache/puppeteer

# Web scraping settings
USER_AGENT=TOOLBAY-Bot/1.0 (+https://toolbay.dev)
SCRAPER_TIMEOUT=10000

# =============================================
# MONITORING & LOGGING
# =============================================
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# =============================================
# FEATURE FLAGS
# =============================================
ENABLE_REAL_TIME=true
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true
ENABLE_ACTIVITY_LOGGING=true

# =============================================
# PRODUCTION ONLY
# =============================================
# Only set these in production
# SENTRY_DSN=your_sentry_dsn_for_error_tracking
# GOOGLE_ANALYTICS_ID=your_ga_tracking_id